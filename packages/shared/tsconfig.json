{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ESNext",
    "composite": true,
    "moduleResolution": "bundler",
    "paths": {
      "@shared/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["../../node_modules/", "dist/", "node_modules"]
}