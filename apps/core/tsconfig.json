{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
   "rootDir": "./",
    "outDir": "./build",
    "moduleResolution": "nodenext",
    "paths": {
      "#controllers/*": ["./app/infrastructure/controllers/*"],
      "#adapters/*": ["./app/infrastructure/adapters/*"],
      "#exceptions/*": ["./app/domain/exceptions/*"],
      "#queries/*": ["./app/domain/queries/*"],
      "#commands/*": ["./app/domain/commands/*"],
      "#models/*": ["./app/infrastructure/models/*"],
      "#mails/*": ["./app/mails/*"],
      "#services/*": ["./app/domain/services/*"],
      "#application/*": ["./app/services/*"],
      "#repositories/*": ["./app/domain/repositories/*"],
      "#entities/*": ["./app/domain/entities/*"],
      "#lucidRepositories/*": ["./app/infrastructure/repositories/*"],
      "#lucidQueries/*": [ "./app/infrastructure/queries/*" ],
      "#listeners/*": ["./app/listeners/*"],
      "#events/*": ["./app/events/*"],
      "#middleware/*": ["./app/infrastructure/middleware/*"],
      "#validators/*": ["./app/validators/*"],
      "#providers/*": ["./providers/*"],
      "#policies/*": ["./app/policies/*"],
      "#abilities/*": ["./app/abilities/*"],
      "#database/*": ["./database/*"],
      "#start/*": ["./start/*"],
      "#tests/*": ["./tests/*"],
      "#config/*": ["./config/*"]
    },
    "typeRoots": [
      "./app/domain/types", "./node_modules/@types"]}
}
